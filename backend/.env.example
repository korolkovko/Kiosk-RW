# .env.example
# Example environment variables for KIOSK application

# Application Settings
PROJECT_NAME="KIOSK Application"
API_V1_STR="/api/v1"
ENVIRONMENT="development"
DEBUG=true
SECRET_KEY="your-super-secret-key-here-change-in-production"

# Database Settings
DATABASE_URL="postgresql://kiosk_user:kiosk_password@localhost:5432/kiosk_db"

# Redis Settings
REDIS_URL="redis://localhost:6379/0"

# Authentication Settings
JWT_SECRET_KEY="your-jwt-secret-key-here-change-in-production"
JWT_ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=1800

# File Upload Settings
MAX_FILE_SIZE=10485760
UPLOAD_PATH="./uploads"

# Logging Settings
LOG_LEVEL="INFO"
LOG_FILE_PATH="./logs/app.log"

# CORS Settings
ALLOWED_ORIGINS=["http://localhost", "http://localhost:3000", "http://localhost:8080"]

# External Integrations
POS_API_URL=""
POS_API_KEY=""
PAYMENT_API_URL=""
PAYMENT_API_KEY=""